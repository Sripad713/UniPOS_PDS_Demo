<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/card_lt_yellow"
    android:layout_height="match_parent"
    tools:context=".Activities.SettingActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="275dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginHorizontal="250dp">

        <Button
            android:id="@+id/device"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Device"
            android:textAllCaps="false"
            android:textSize="@dimen/TextsizeB"
            android:foreground="@drawable/custom_ripple"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/update"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="@string/Update"
            android:foreground="@drawable/custom_ripple"
            android:textSize="@dimen/TextsizeB"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/deviceinfo"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Device_Info"
            android:textAllCaps="false"
            android:textSize="@dimen/TextsizeB"
            android:foreground="@drawable/custom_ripple"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/deviceparameters"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Device_Parameters"
            android:textAllCaps="false"
            android:textSize="@dimen/TextsizeB"
            android:foreground="@drawable/custom_ripple"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/pairdevice"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Pairing"
            android:textAllCaps="false"
            android:textSize="@dimen/TextsizeB"
            android:foreground="@drawable/custom_ripple"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/dbdownloadtoftp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DB Downlod to FTP"
            android:textAllCaps="false"
            android:textSize="@dimen/TextsizeB"
            android:foreground="@drawable/custom_ripple"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/logfile"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Upload_log_to_FTP"
            android:textAllCaps="false"
            android:textSize="@dimen/TextsizeB"
            android:foreground="@drawable/custom_ripple"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/back"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@color/cancel"
                        android:gravity="center"
                        android:layout_marginVertical="5dp"
                        android:layout_gravity="bottom"
                        android:text="@string/Back"
                        android:foreground="@drawable/custom_ripple"
                        android:textColor="@color/white"
                        android:textSize="@dimen/TextsizeB"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/black"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="Powered by"
                        android:background="@color/link_color"
                        android:textColor="@color/white"
                        android:textSize="@dimen/TextsizeH"
                        android:textStyle="bold" />

                    <ImageView
                        android:gravity="left"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/wblack"
                        android:contentDescription="TODO"
                        android:src="@drawable/nic3" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


